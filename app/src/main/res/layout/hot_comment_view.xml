<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">
<!--    <TextView-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:paddingLeft="15dp"-->
<!--        android:textColor="@color/colorPrimaryText"-->
<!--        android:textStyle="bold"-->
<!--        android:text="精彩评论"-->
<!--        android:textSize="16sp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/song_comment_avatar"
                android:layout_marginRight="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:layout_toRightOf="@+id/song_comment_avatar"
                android:text="不猜不猜不猜"
                android:id="@+id/song_comment_nickname"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/song_comment_date"
                android:layout_toRightOf="@+id/song_comment_avatar"
                android:layout_below="@+id/song_comment_nickname"
                android:text="2019年10月10日"
                android:textColor="@color/colorGaryText"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/song_comment_zan"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/zan"
                android:layout_width="18dp"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp"/>
            <TextView
                android:id="@+id/song_comment_zanCount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/song_comment_zan"
                android:textColor="@color/colorGaryText"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/song_comment_content"
            android:paddingLeft="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"
            android:text="123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>