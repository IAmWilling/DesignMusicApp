<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/song_sheet_playlistdetail_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <TextView
        android:id="@+id/song_index"
        android:textSize="16sp"
        android:gravity="center_vertical|center"
        android:layout_width="70dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/song_name"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_song_mv"
                android:visibility="gone"
                android:textSize="10sp"
                android:text="MV"
                android:layout_marginRight="6dp"
                android:textColor="#E30000"
                android:gravity="center|clip_horizontal"
                android:background="@drawable/mv_border_all"
                android:layout_width="20dp"
                android:layout_height="15dp"/>
            <TextView
                android:maxLines="1"
                android:id="@+id/song__chusheng"
                android:textSize="10sp"
                android:textColor="#757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/ic_more_vert_black_18dp"
        android:layout_marginRight="15dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>