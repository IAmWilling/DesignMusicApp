<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/notic_img_small"
        android:layout_width="80dp"
        android:layout_marginRight="10dp"
        android:layout_height="80dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="贝贝"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryText"
            android:textSize="13sp"
            android:id="@+id/notic_music_name_small"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:text="李荣浩 - 贝贝"
            android:textColor="@color/colorGaryText"
            android:textSize="11sp"
            android:id="@+id/notic_music_detail_name_small"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/notic_btn_playandpause_small"
            android:src="@drawable/play_gray"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/notic_btn_next_small"
            android:src="@drawable/next_gray"
            android:layout_width="18dp"
            android:layout_marginLeft="15dp"
            android:layout_height="18dp"/>
        <ImageView
            android:id="@+id/notic_btn_ciText_small"
            android:src="@drawable/ci_gray"
            android:layout_width="18dp"
            android:layout_marginLeft="30dp"
            android:layout_height="18dp"/>
    </LinearLayout>
</LinearLayout>