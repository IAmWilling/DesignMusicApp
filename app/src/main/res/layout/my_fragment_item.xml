<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_info_view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_all"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/user_image"

                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/user_nickname"
                    android:text="昵称"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:id="@+id/user_signature"
                    android:text="简介"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chevron_right_black_36dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/my_create_song_sheet"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:id="@+id/my_create_song_sheet_image"
            android:src="@drawable/ic_chevron_right_black_36dp"
            />
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginRight="10dp"
            android:text="我创建的歌单"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/my_create_song_sheet_count"
            android:textSize="14sp"
            android:textColor="@color/colorGaryText"
            android:text="(4)"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/my_create_song_recyclerlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/my_collection_song_sheet"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/my_collection_song_sheet_image"
                android:layout_width="30dp"
                android:layout_marginRight="5dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chevron_right_black_36dp"
                />
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginRight="10dp"
                android:text="我收藏的歌单"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/my_collection_song_sheet_count"
                android:textSize="14sp"
                android:textColor="@color/colorGaryText"
                android:text="(11)"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_collection_song_recyclerlist"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/design_navigation_view2"
        android:layout_width="300dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header_items"
        app:menu="@menu/navigation_view_items"
        android:layout_height="match_parent" />
</androidx.drawerlayout.widget.DrawerLayout>