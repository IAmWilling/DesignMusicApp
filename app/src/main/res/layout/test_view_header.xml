<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout android:id="@+id/appBar1"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/song_sheet_toolbarlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentScrim="?attr/colorPrimary"
        app:titleEnabled="false"
        app:title="456"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >
        <ImageView
            android:id="@+id/song_sheet_cover_img_big1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_collapseMode="parallax"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linelayout1"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/smallCover"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/border_all_radius"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/song_sheet_title_name1"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/createor_avatar1"
                            android:layout_width="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/createor_nickname1"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorGaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/despation1"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorGaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"

            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <RelativeLayout
               android:gravity="left"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/trackImag"
                   android:src="@drawable/ic_insert_comment_white_48dp"
                   android:layout_width="20dp"
                   android:layout_height="20dp"/>
               <TextView
                   android:id="@+id/track_content_count"
                   android:textSize="12sp"
                   android:gravity="center"
                    android:layout_below="@+id/trackImag"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1.7"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/shareImag"
                    android:src="@drawable/ic_share_white_48dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/share_count"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_below="@+id/shareImag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1.7"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/downloadImag"
                    android:src="@drawable/ic_cloud_download_white_48dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/download_count"
                    android:text="下载"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_below="@+id/downloadImag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/checkImag"
                    android:src="@drawable/ic_playlist_add_check_white_48dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/check_count"
                    android:text="多选"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_below="@+id/checkImag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/song_sheet_toolbar1"
            app:navigationIcon="@drawable/ic_keyboard_backspace_white_18dp"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextAppearance="@style/mintext_size"
            app:layout_collapseMode="pin"/>
        <!--    <TextView-->
        <!--        app:layout_collapseMode="pin"-->
        <!--        android:gravity="center_vertical"-->
        <!--        android:text="66666666666"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="55dp"/>-->

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>